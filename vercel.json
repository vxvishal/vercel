{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/user/signup",
      "dest": "./src/routes/user.route.js"
    },
    {
      "src": "/api/user/login",
      "dest": "./src/routes/user.route.js"
    },
    {
      "src": "/api/user",
      "dest": "./src/routes/user.route.js"
    },
    {
      "src": "/api/file/upload",
      "dest": "./src/routes/file.route.js"
    },
    {
      "src": "/api/file/delete/:id",
      "dest": "./src/routes/file.route.js"
    },
    {
      "src": "/api/file/allFiles",
      "dest": "./src/routes/file.route.js"
    },
    {
      "src": "/api/file/:id",
      "dest": "./src/routes/file.route.js"
    },
    {
      "src": "/api/comment/add",
      "dest": "./src/routes/comments.route.js"
    },
    {
      "src": "/api/comment/file/:fileID",
      "dest": "./src/routes/comments.route.js"
    },
    {
      "src": "/(.*)",
      "dest": "./index.js"
    }
  ]
}
